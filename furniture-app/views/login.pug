extends layout
block content
  if error
    .alert.alert-danger= error
  h2.mb-3 Connexion
  form(method='post')
    .mb-3
      label.form-label(for='username') Nom d'utilisateur
      input.form-control(type='text',name='username',required)
    .mb-3
      label.form-label(for='password') Mot de passe
      input.form-control(type='password',name='password',required)
    button.btn.btn-primary(type='submit') Se connecter