doctype html
html(lang="fr")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= title || 'Furniture App'
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="/css/style.css")
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.mb-4
      .container-fluid
        a.navbar-brand(href="/dashboard") FurnitureApp
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#nav')
          span.navbar-toggler-icon
        #nav.collapse.navbar-collapse
          ul.navbar-nav.me-auto
            li.nav-item
              a.nav-link(href='/furnitures') Meubles
            li.nav-item
              a.nav-link(href='/categories/new') Nouvelle catégorie
            li.nav-item
              a.nav-link(href='/stats') Statistiques
            li.nav-item
              a.nav-link(href='/material') Matériaux
        ul.navbar-nav.ms-auto
          li.nav-item
            a.nav-link(href="/logout") Déconnexion
    .container
      block content
    script(src="https://cdn.jsdelivr.net/npm/chart.js@4.5.0/dist/chart.umd.min.js")
    script(src="/js/charts.js")
    block scripts